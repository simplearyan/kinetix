---
import Layout from "../layouts/Layout.astro";
import { Editor } from "../components/Editor";
---

<Layout title="Kinetix App" showFooter={false} showAds={false}>
    <main class="h-screen flex flex-col overflow-hidden bg-white">
        <!-- App Header -->
        <header
            class="h-14 border-b border-slate-200 flex items-center justify-between px-4 bg-white z-10"
        >
            <div class="flex items-center gap-4">
                <a
                    href={import.meta.env.BASE_URL}
                    class="flex items-center gap-2 font-bold text-slate-900 hover:opacity-80 transition-opacity"
                >
                    <div
                        class="w-6 h-6 bg-slate-900 rounded flex items-center justify-center text-white"
                    >
                        <svg
                            width="14"
                            height="14"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="3"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M7 2v20M17 2v20M2 12h20"></path>
                        </svg>
                    </div>
                </a>
                <div class="h-4 w-px bg-slate-200"></div>
                <div class="text-sm font-medium text-slate-500">
                    Untitled Project
                </div>
            </div>

            <div class="flex items-center gap-3">
                <button
                    class="px-3 py-1.5 text-xs font-semibold text-slate-600 hover:bg-slate-50 rounded-lg transition-colors"
                >
                    Export
                </button>
                <button
                    class="px-3 py-1.5 text-xs font-semibold bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors shadow-sm shadow-blue-600/20"
                >
                    Share
                </button>
            </div>
        </header>

        <!-- Editor React Island -->
        <div class="flex-1 overflow-hidden">
            <Editor client:only="react" />
        </div>
    </main>
</Layout>
