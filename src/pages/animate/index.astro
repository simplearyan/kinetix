---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Kinetix Hub" showFooter={false}>
    <div
        class="min-h-screen bg-[#0f172a] flex flex-col items-center justify-center p-8 relative overflow-hidden"
    >
        <!-- Background Decor -->
        <div
            class="absolute inset-0 bg-[radial-gradient(#1e293b_1px,transparent_1px)] [background-size:32px_32px] opacity-20 pointer-events-none"
        >
        </div>
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-blue-600/10 rounded-full blur-[120px] pointer-events-none"
        >
        </div>

        <div class="max-w-4xl w-full z-10">
            <h1
                class="text-4xl md:text-5xl font-extrabold text-white text-center mb-4 tracking-tight"
            >
                What do you want to <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
                    >animate</span
                >?
            </h1>
            <p class="text-gray-400 text-center mb-16 text-lg max-w-xl mx-auto">
                Choose a specialized studio to create professional animations in
                seconds.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Text Card -->
                <a
                    href="/animate/text"
                    class="group relative bg-gray-900 border border-gray-800 hover:border-blue-500/50 rounded-2xl p-8 transition-all hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-1 block"
                >
                    <div
                        class="h-48 mb-6 bg-gray-950 rounded-xl overflow-hidden flex items-center justify-center relative border border-gray-800 group-hover:border-gray-700 transition-colors"
                    >
                        <!-- Animated Text Preview -->
                        <div
                            class="absolute inset-0 bg-grid-slate-800/[0.2] [mask-image:linear-gradient(0deg,white,transparent)]"
                        >
                        </div>
                        <h2
                            class="text-4xl font-bold text-white relative animate-float"
                        >
                            Type <span class="text-blue-500">Fast</span>
                        </h2>
                    </div>
                    <div class="flex items-center justify-between">
                        <div>
                            <h3
                                class="text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors"
                            >
                                Typography
                            </h3>
                            <p class="text-gray-500 text-sm">
                                Animate text, titles, and kinetic typography.
                            </p>
                        </div>
                        <div
                            class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center group-hover:bg-blue-600 transition-colors"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="text-white"
                                ><path d="M5 12h14"></path><path
                                    d="m12 5 7 7-7 7"></path></svg
                            >
                        </div>
                    </div>
                </a>

                <!-- Charts Card -->
                <a
                    href="/animate/charts"
                    class="group relative bg-gray-900 border border-gray-800 hover:border-purple-500/50 rounded-2xl p-8 transition-all hover:shadow-2xl hover:shadow-purple-500/10 hover:-translate-y-1 block"
                >
                    <div
                        class="h-48 mb-6 bg-gray-950 rounded-xl overflow-hidden flex items-center justify-center relative border border-gray-800 group-hover:border-gray-700 transition-colors"
                    >
                        <div
                            class="absolute inset-0 bg-grid-slate-800/[0.2] [mask-image:linear-gradient(0deg,white,transparent)]"
                        >
                        </div>
                        <!-- Animated Chart Preview -->
                        <div class="flex items-end gap-2 h-20">
                            <div
                                class="w-6 bg-purple-500 rounded-t h-12 animate-pulse"
                                style="animation-delay: 0s"
                            >
                            </div>
                            <div
                                class="w-6 bg-purple-400 rounded-t h-16 animate-pulse"
                                style="animation-delay: 0.1s"
                            >
                            </div>
                            <div
                                class="w-6 bg-purple-600 rounded-t h-10 animate-pulse"
                                style="animation-delay: 0.2s"
                            >
                            </div>
                            <div
                                class="w-6 bg-purple-300 rounded-t h-14 animate-pulse"
                                style="animation-delay: 0.3s"
                            >
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center justify-between">
                        <div>
                            <h3
                                class="text-xl font-bold text-white mb-2 group-hover:text-purple-400 transition-colors"
                            >
                                Data Visualization
                            </h3>
                            <p class="text-gray-500 text-sm">
                                Create stunning animated charts and graphs.
                            </p>
                        </div>
                        <div
                            class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center group-hover:bg-purple-600 transition-colors"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="text-white"
                                ><path d="M5 12h14"></path><path
                                    d="m12 5 7 7-7 7"></path></svg
                            >
                        </div>
                    </div>
                </a>
            </div>

            <div class="mt-16 text-center">
                <a
                    href="/studio"
                    class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-white transition-colors"
                >
                    <span>Looking for the full editor?</span>
                    <span
                        class="underline underline-offset-4 decoration-gray-700 group-hover:decoration-white"
                        >Open Studio</span
                    >
                </a>
            </div>
        </div>
    </div>

    <style>
        @keyframes float {
            0%,
            100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-5px);
            }
        }
        .animate-float {
            animation: float 3s ease-in-out infinite;
        }
    </style>
</Layout>
